{
  "name": "Grayscale",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "photo-camera-interface-symbol-for-button.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage", 
    "activeTab"
  ]
}